# DeGenie Logo Generation Service Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenAI Configuration (Primary provider)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=dall-e-3
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=60000

# Stability AI Configuration (Fallback provider)
STABILITY_API_KEY=your_stability_api_key_here
STABILITY_ENGINE=stable-diffusion-xl-1024-v1-0
STABILITY_MAX_RETRIES=3
STABILITY_TIMEOUT=90000

# Service Configuration
PORT=3001
NODE_ENV=development

# Image Processing Configuration
IMAGE_QUALITY=hd
IMAGE_DEFAULT_SIZE=1024x1024
IMAGE_DEFAULT_FORMAT=png
IMAGE_STORAGE_PATH=./generated_logos

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=10
RATE_LIMIT_REQUESTS_PER_HOUR=50

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/logo-generator.log

# API Configuration
API_TIMEOUT=120000
API_RETRIES=3

# Provider Priority (comma-separated)
# Available: openai, stability
PROVIDER_PRIORITY=openai,stability

# Enable/Disable Features
ENABLE_RATE_LIMITING=true
ENABLE_LOGGING=true
ENABLE_HISTORY=true
ENABLE_STATS=true